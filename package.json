{
  "name": "ts-levenshtein",
  "version": "1.0.0",
  "description": "Efficient implementation of Levenshtein algorithm  with locale-specific collator support.",
  "main": "dist/ts-levenshtein.cjs",
  "module": "dist/ts-levenshtein.mjs",
  "types": "dist/ts-levenshtein.d.ts",
  "exports": {
    ".": {
      "types": "./dist/ts-levenshtein.d.ts",
      "import": "./dist/ts-levenshtein.mjs",
      "require": "./dist/ts-levenshtein.cjs"
    }
  },
  "unpkg": "dist/ts-levenshtein.global.js",
  "jsdelivr": "dist/ts-levenshtein.global.js",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "prepack": "npm run build",
    "benchmark": "npm run build && tsx benchmark/run.ts",
    "test": "npm run build && node --test",
    "release": "release-it"
  },
  "devDependencies": {
    "chai": "~1.5.0",
    "lodash": "^4.0.1",
    "typescript": "^5.5.4",
    "@release-it/conventional-changelog": "^10.0.1",
    "release-it": "^19.0.4",
    "tsup": "^8.5.0",
    "tsx": "^4.19.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ChasLui/ts-levenshtein.git"
  },
  "keywords": [
    "levenshtein",
    "distance",
    "string"
  ],
  "author": "ChasLui <chaslui@outlook.com>",
  "license": "MIT",
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitMessage": "chore(release): v${version}",
      "requireCleanWorkingDir": true,
      "requireBranch": [
        "main",
        "master"
      ]
    },
    "npm": {
      "publish": true,
      "access": "public",
      "tag": "latest"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "before:init": [
        "npm ci --no-audit --no-fund",
        "npm run build",
        "npm test --silent"
      ],
      "after:release": "echo Successfully released ${name} v${version}."
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits",
        "infile": "CHANGELOG.md"
      }
    }
  }
}
